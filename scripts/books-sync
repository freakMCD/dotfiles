#!/usr/bin/env bash
# Sync Books from Linux to Android using rsync

RSYNC_PORT=8022
LOCAL_DIR="$HOME/MathCareer/sync/"
REMOTE_DIR="/storage/5DD2-1011/Books/"
REMOTE_USER="admin"
REMOTE_HOST="192.168.1.43"

books() {
    rsync -avP --delete --copy-links --stats \
        -e "ssh -p ${RSYNC_PORT} -o Compression=no -c aes128-ctr" \
        "$LOCAL_DIR" "${REMOTE_USER}@${REMOTE_HOST}:${REMOTE_DIR}"
}

# Run the books sync directly
books

